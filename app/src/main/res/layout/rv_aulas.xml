

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/purple"
            android:id="@+id/layout_hour"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h 50min"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:id="@+id/txt_hora"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="faltando"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/txt_hora"
                android:layout_marginTop="7dp"
                android:gravity="center"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/txt_aula_materia"
            android:text="Fundamentos de Cálculo"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/layout_hour"
            android:layout_toEndOf="@+id/layout_hour" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:id="@+id/txt_aula_professor"
            android:text="Profº Samuel"
            android:layout_below="@id/txt_aula_materia"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/layout_hour"
            android:layout_toEndOf="@+id/layout_hour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:id="@+id/txt_aula_hora"
            android:text="09h00 - 10h30"
            android:gravity="right"
            android:layout_marginEnd="25dp"
            android:layout_alignBaseline="@+id/txt_aula_professor"
            android:layout_alignBottom="@+id/txt_aula_professor"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
